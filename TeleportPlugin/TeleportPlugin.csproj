<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
      <TargetFramework>net6.0</TargetFramework>
      <ImplicitUsings>enable</ImplicitUsings>
      <Nullable>enable</Nullable>
      <EnableDynamicLoading>true</EnableDynamicLoading>
      <SelfContained>false</SelfContained>
      <DebugType>embedded</DebugType>
      <PublishDir Condition="'$(RuntimeIdentifier)' == 'linux-x64'">..\out-linux-x64\plugins\$(MSBuildProjectName)\</PublishDir>
      <PublishDir Condition="'$(RuntimeIdentifier)' != 'linux-x64'">..\out-win-x64\plugins\$(MSBuildProjectName)\</PublishDir>
  </PropertyGroup>

  <ItemGroup>
      <ProjectReference Include="..\AssettoServer\AssettoServer.csproj">
          <Private>false</Private>
          <ExcludeAssets>runtime</ExcludeAssets>
      </ProjectReference>
  </ItemGroup>

    <ItemGroup>
        <None Remove="lua\teleport-client.lua" />
        <None Remove="lua\teleport-to.lua" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="lua\teleport-to-car.lua" />
        <EmbeddedResource Include="lua\teleport-to-car.lua" />
        <None Remove="lua\teleport-to-location.lua" />
        <EmbeddedResource Include="lua\teleport-to-location.lua" />
    </ItemGroup>
</Project>
